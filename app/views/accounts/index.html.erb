<h1>Accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Account Number</th>
    <th>Balance</th>
  </tr>
  
  <% @accounts.each do |a| %>
    <tr>
      <td><%= a.name %></td>
      <td><%= a.account_number %></td>
      <td><%= number_to_currency(a.balance) %></td>
    </tr>
  <% end %>
</table>
